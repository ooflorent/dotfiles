[user]
    name = Florent Cailhol
    email = florent.cailhol@gmail.com
[alias]
    c = commit -m
    ca = commit -am
    ci = commit
    co = checkout
    go = checkout -B
    df = diff
    dfs = diff --ignore-all-space
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    s = status -s
    st = status
    undo = !git clean -f && (git rebase --abort || git reset --hard)
    up = !git fetch origin && git rebase origin/master
    rename = !git branch -m `git rev-parse --abbrev-ref HEAD`
[advice]
    pushNonFastForward = false
    statusHints = false
[branch]
    autosetupmerge = true
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    editor = vim
    autocrlf = input
    quotepath = false
    excludesfile = ~/.gitignore
[diff]
    mnemonicprefix = true
[push]
    default = tracking
[rerere]
    enabled = true
