[alias]
  cf = commit --amend --no-edit
  ci = commit
  co = checkout
  go = checkout -b
  st = status
  s = status -s
  df = diff
  dfs = diff --ignore-all-space
  undo = !git clean -f && (git rebase --abort || git reset --hard)
  please = push --force-with-lease

[apply]
  whitespace = fix

[core]
  excludesfile = ~/.gitexcludes
  whitespace = trailing-space,space-before-tab

[color]
  ui = auto

[merge]
  log = true

[pull]
  rebase = true

[push]
  default = upstream
  followTags = true

